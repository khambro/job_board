<h1>Create a new job here!</h1>

  <%= form_for @job do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description, size: '60x6' %>
  </div>
  <div>
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>
  <div>
    <%= f.label :pay %>
    <%= f.text_field :pay %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
